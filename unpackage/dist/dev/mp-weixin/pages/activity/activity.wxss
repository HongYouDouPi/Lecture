.whole {
  background-color: #ececec;
}
.find {
  height: 120rpx;
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  background-color: #AAAAFF;
}
.find .text {
  width: 600rpx;
  height: 75rpx;
  border-radius: 30rpx;
  margin-left: 30rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.find .search {
  width: 100rpx;
  font-size: 40rpx;
  color: #ffffff;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
}
.find .find_pic {
  width: 60rpx;
  height: 60rpx;
  margin: 0 28rpx;
}
.filter {
  height: 80rpx;
  width: 100%;
  box-shadow: 0 10rpx 10rpx #CCCCCC;
  display: flex;
  align-items: center;
}
.filter .filter_expired {
  height: 80rpx;
  width: 630rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.filter .filter_button {
  height: 80rpx;
  width: 120rpx;
  font-size: 28rpx;
  font-weight: lighter;
  color: #2235a6;
  margin: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.filter .filter_button .filter_img {
  height: 50rpx;
  width: 50rpx;
}
.content .content_item {
  height: 220rpx;
  border-radius: 20rpx;
  margin: 16rpx 20rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.content .content_item .item_pic {
  width: 220rpx;
  height: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .content_item .item_pic .item_image {
  width: 200rpx;
  height: 180rpx;
  border-radius: 25rpx;
}
.content .content_item .content_text {
  width: 490rpx;
  height: 220rpx;
  display: flex;
}
.content .content_item .content_text .basic {
  width: 390rpx;
  height: 200rpx;
  margin: 10rpx 10rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}
.content .content_item .content_text .basic .text_name {
  height: 54rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.content .content_item .content_text .basic .text_brief {
  height: 70rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .content_item .content_text .basic .time_location {
  height: 76rpx;
}
.content .content_item .content_text .basic .time_location .time {
  height: 38rpx;
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}
.content .content_item .content_text .basic .time_location .location_visitor {
  height: 38rpx;
  font-size: 24rpx;
  color: #999999;
  display: flex;
  justify-content: space-between;
}
.content .content_item .content_text .basic .time_location .location_visitor .location {
  display: flex;
  align-items: center;
}
.content .content_item .content_text .basic .time_location .location_visitor .location text {
  width: 220rpx;
  overflow: hidden;
  /* 超出部分隐藏 */
  white-space: nowrap;
  /* 防止文本换行，强制在一行内显示 */
}
.content .content_item .content_text .basic .time_location .location_visitor .visitor {
  height: 38rpx;
  width: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.content .content_item .content_text .basic .time_location .location_visitor .visitor .visitor_img {
  height: 28rpx;
  width: 38rpx;
  margin-right: 4rpx;
}
.content .content_item .content_text .basic .time_location .text_img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.content .content_item .content_text .content_tagger {
  width: 80rpx;
  height: 200rpx;
  margin: 10rpx 0rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.content .content_item .content_text .content_tagger .add {
  width: 80rpx;
  height: 50rpx;
  border-bottom-left-radius: 12rpx;
  border-top-left-radius: 12rpx;
  background-color: #c84040;
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.content .content_item .content_text .content_tagger .add .text_add {
  color: #ffffff;
  margin-left: 5rpx;
}
.totop {
  height: 50rpx;
  width: 50rpx;
  position: fixed;
  bottom: 200rpx;
  right: 40rpx;
}
.totop image {
  height: 50rpx;
  width: 50rpx;
}