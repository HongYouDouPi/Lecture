.whole {
  width: 100%;
}
.whole .mine {
  height: 550rpx;
  width: 100%;
  position: relative;
}
.whole .mine .my_background {
  height: 425rpx;
  width: 100%;
}
.whole .mine .list {
  width: 100%;
  background-color: #ececec;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  position: absolute;
  top: 400rpx;
}
.whole .mine .list .attend {
  height: 200rpx;
  margin: 100rpx 40rpx 40rpx 40rpx;
  border-radius: 25rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 15rpx 30rpx -20rpx #a88383;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.whole .mine .list .attend .attend_list {
  width: 150rpx;
  height: 120rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-around;
}
.whole .mine .list .attend .attend_list .attend_pic {
  width: 60rpx;
  height: 60rpx;
}
.whole .mine .list .function {
  width: 100%;
}
.whole .mine .list .function image {
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx 10rpx 0rpx 20rpx;
}
.whole .mine .list .function text {
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}
.whole .mine .list .function .base_appearance {
  margin: 0rpx 40rpx 40rpx 40rpx;
  border-radius: 25rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 15rpx 30rpx -20rpx #a88383;
}
.whole .mine .list .function .base_appearance_single {
  height: 100rpx;
  display: flex;
  align-items: center;
  margin: 0rpx 15rpx;
}
.whole .mine .list .function .sign_out {
  height: 100rpx;
  margin: 80rpx 150rpx 240rpx 150rpx;
  background-color: #ff8c7d;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.whole .mine .list .function .sign_out text {
  font-size: 36rpx;
  color: #ffffff;
  letter-spacing: 5rpx;
}
.whole .mine .my {
  width: 300rpx;
  /* 宽度为容器的一半 */
  height: 320rpx;
  /* 高度与容器相同 */
  position: absolute;
  top: 310rpx;
  /* 从顶部开始，向下450rpx */
  left: 50%;
  /* 从左侧开始，不偏移 */
  transform: translate(-50%, -50%);
  /* 改变原来的中心点 向x轴左边 y轴下边偏移50% 就使得其图片/元素居中 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.whole .mine .my .my_img {
  height: 200rpx;
  width: 200rpx;
  box-shadow: 0rpx 0rpx 28rpx 4rpx #ffffff;
  border-radius: 20rpx;
}
.whole .mine .my .my_text {
  height: 60rpx;
  font-size: 40rpx;
  font-weight: 700;
}