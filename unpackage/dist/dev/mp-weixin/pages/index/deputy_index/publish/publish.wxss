.container {
  display: flex;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
  flex-direction: column;
  /* 垂直方向排列 */
  padding: 20rpx;
}
.input-wrapper {
  margin-bottom: 20rpx;
}
.input-field {
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin: 20rpx 35rpx;
}
.input-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  margin: 10rpx 30rpx;
}
.large-input-field {
  height: 200rpx;
  /* 调整文本框的高度 */
  font-size: 28rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  padding: 20rpx;
  /* 增加内边距 */
  resize: none;
  /* 禁止文本框大小调整 */
}
.picker {
  background-color: white;
  text-align: center;
}
.submit-button {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1aad19;
  color: white;
  font-size: 32rpx;
  border: none;
  border-radius: 10rpx;
}
.selectLocation {
  height: 80rpx;
  width: 200rpx;
  background-color: #d3f0d3;
  /* 淡绿色背景 */
  color: #333;
  /* 文字颜色稍深 */
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  /* 添加底部间距 */
  font-size: 28rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  /* 添加阴影效果 */
  padding: 10rpx;
  /* 调整内边距 */
  margin-top: 20rpx;
  /* 添加顶部间距 */
}
.uploaded-image {
  width: 100%;
  /* 设置图片宽度 */
  height: 400rpx;
  /* 设置图片高度 */
  border-radius: 10rpx;
  /* 设置圆角 */
  margin-bottom: 20rpx;
  /* 设置下方间距 */
}